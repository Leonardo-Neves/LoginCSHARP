@model LoginProject.Models.Usuario;
@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 >Cadastrar</h1>

<br/>
<form asp-action="Cadastrar" asp-controller="Home" method="post">
    <div class="form-group">
        <label>Nome</label>
        <input asp-for="Nome" class="form-control shadow-lg rounded-pill" type="text">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control shadow-lg rounded-pill" type="email">
    </div>
    <br/>
    <div class="form-group">
        <button type="submit" class="btn btn-outline-warning btn-block shadow-lg rounded-pill"> Cadastrar </button>
    </div>
</form>



